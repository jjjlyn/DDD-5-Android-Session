<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ddd.android.session.DDDProgressBar
        android:id="@+id/progressBarFirst"
        android:layout_marginTop="16dp"
        android:layout_width="280dp"
        android:layout_height="12dp"
        android:radius="4dp"
        app:strokeColor="@android:color/holo_red_dark"
        app:strokeWidth="2dp"
        app:progress="0.7"
        app:progressAnimation="scale"
        app:progressBarForeground="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.ddd.android.session.DDDProgressBar
        android:id="@+id/progressBarSecond"
        android:layout_marginTop="16dp"
        android:layout_width="280dp"
        android:layout_height="12dp"
        android:radius="4dp"
        app:strokeColor="@android:color/holo_blue_dark"
        app:strokeWidth="2dp"
        app:progress="0.7"
        app:layout_constraintTop_toBottomOf="@id/progressBarFirst"
        app:progressAnimation="fade"
        app:progressBarForeground="@android:color/holo_blue_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.ddd.android.session.DDDProgressBar
        android:id="@+id/progressBarThird"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:radius="4dp"
        app:strokeColor="@android:color/holo_green_dark"
        app:strokeWidth="2dp"
        app:progress="0.7"
        app:layout_constraintTop_toBottomOf="@id/progressBarSecond"
        app:progressAnimation="float_scale"
        app:progressBarForeground="@android:color/holo_green_dark"
        app:layout_constraintLeft_toLeftOf="@id/progressBarFirst"
        />

</androidx.constraintlayout.widget.ConstraintLayout>